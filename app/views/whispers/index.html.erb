    <h1>つぶやき一覧</h1>
      <p><%= notice %></p>
  <table>
    <tr>
      <th>つぶやき内容</th>
    </tr>

    <% @whispers.each do |whisper| %>
        <tr>
        <td class="content"><%= whisper.content %></td>
        <td class="contents_tab"><%= link_to "つぶやきを編集する", edit_whisper_path(whisper.id), data: { confirm: '本当に編集していいですか？' }  %></td>
        <td class="contents_tab2"><%= link_to 'つぶやきを削除する', whisper_path(whisper.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }  %></td>
      </tr>
    <% end %>
  </table>

    <%= link_to '新しくつぶやく', new_whisper_path %>
